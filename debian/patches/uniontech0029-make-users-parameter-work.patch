Subject: [PATCH] make users parameter work
Change-Id: I2a97bdb1e131318367a2bf3ca393f5c44e30ade2
---
 grub-core/normal/auth.c |  2 +-
 grub-core/normal/menu.c | 10 ++++++++++
 2 files changed, 11 insertions(+), 1 deletion(-)
Index: grub2/grub-core/normal/auth.c
===================================================================
--- grub2.orig/grub-core/normal/auth.c	2022-11-01 10:27:51.735867092 +0800
+++ grub2/grub-core/normal/auth.c	2022-11-01 10:27:51.735867092 +0800
@@ -141,7 +141,7 @@
 	continue;
 
       if ((userlist && grub_strword (userlist, user->name))
-	  || (!userlist))
+	  || (grub_strlen(userlist) == 0))
 	return 1;
     }
 
Index: grub2/grub-core/normal/menu.c
===================================================================
--- grub2.orig/grub-core/normal/menu.c	2022-11-01 10:27:51.735867092 +0800
+++ grub2/grub-core/normal/menu.c	2022-11-01 10:28:08.000000000 +0800
@@ -204,12 +204,22 @@
 static void
 grub_menu_execute_entry(grub_menu_entry_t entry, int auto_boot)
 {
+  grub_err_t err = GRUB_ERR_NONE;
   int errs_before;
   grub_menu_t menu = NULL;
   char *optr, *buf, *oldchosen = NULL, *olddefault = NULL;
   const char *ptr, *chosen, *def;
   grub_size_t sz = 0;
 
+  if (grub_strlen(entry->users))
+    err = grub_auth_check_authentication (entry->users);
+    
+  if (err)
+    {
+      grub_print_error ();
+      grub_errno = GRUB_ERR_NONE;
+      return;
+    }
 
   errs_before = grub_err_printed_errors;
 
