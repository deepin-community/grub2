--- grub2-2.06.orig/util/grub-mkconfig.in
+++ grub2-2.06/util/grub-mkconfig.in
@@ -282,6 +282,16 @@ cat << EOF
 #
 EOF
 
+# get locale lang
+machine=`uname -m`
+if [ x"$machine" = x"x86_64" ]; then
+       if [ -f /etc/default/locale ]; then
+               lang=`cat /etc/default/locale | head -n +1 | awk -F '=' '{print $2}'`
+               export LANG=$lang
+       fi
+else
+	export LANG=C
+fi
 
